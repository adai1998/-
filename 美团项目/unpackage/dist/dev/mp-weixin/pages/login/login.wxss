.loginContainer {
  width: 100%;
  height: 1184rpx;
}
.loginContainer .header {
  width: 100%;
  height: 200rpx;
  padding-top: 50rpx;
}
.loginContainer .header .image {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto;
  border-radius: 50%;
}
.loginContainer .header .image image {
  width: 100%;
  height: 100%;
}
.loginContainer .content {
  width: 100%;
}
.loginContainer .content .login {
  width: 750rpx;
  height: 370rpx;
}
.loginContainer .content .login .phone {
  width: 620rpx;
  height: 50rpx;
  background: #fff;
  margin: 0 auto;
  border-bottom: 4rpx solid #999;
  padding-bottom: 20rpx;
  line-height: 50rpx;
}
.loginContainer .content .login .phone ._p {
  position: relative;
  float: left;
  width: 138rpx;
  height: 49rpx;
  font-size: 24rpx;
}
.loginContainer .content .login .phone ._p ._i {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 10rpx;
  height: 10rpx;
  border-left: 2rpx solid #ccc;
  border-bottom: 2rpx solid #ccc;
  -webkit-transform: rotate(230deg);
      -ms-transform: rotate(230deg);
          transform: rotate(230deg);
}
.loginContainer .content .login .phone input {
  float: left;
}
.loginContainer .content .login .code {
  width: 620rpx;
  height: 50rpx;
  background: #fff;
  margin: 0 auto;
  border-bottom: 4rpx solid #999;
  padding-bottom: 20rpx;
  line-height: 50rpx;
  margin-top: 60rpx;
  line-height: 50rpx;
}
.loginContainer .content .login .code ._p {
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 10rpx;
  font-size: 26rpx;
  color: #ccc;
  float: right;
  margin-top: 15rpx;
  border-left: 4rpx solid #ccc;
}
.loginContainer .content .login .code input {
  float: left;
  margin-top: 10rpx;
}
.loginContainer .content .login .anniu {
  width: 620rpx;
  height: 90rpx;
  margin: 0 auto;
  margin-top: 60rpx;
}
.loginContainer .content .login .anniu button {
  background: #ffbd00;
  color: #222;
  opacity: 0.3;
  font-size: 30rpx;
}
.loginContainer .content .weizhuce {
  margin-top: 10rpx;
  font-size: 24rpx;
  text-align: center;
  color: #999;
}
.loginContainer .content .zhanghao {
  margin-top: 50rpx;
  text-align: center;
  font-size: 24rpx;
}
.loginContainer .footer {
  margin-top: 360rpx;
  text-align: center;
  width: 100%;
  font-size: 24rpx;
}
.loginContainer .footer ._span {
  color: #fe8c00;
}

